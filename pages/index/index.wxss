/*顶部*/

.heightem{
    height: 2rem;
    width: 100%;
}


/* 有图片的样式 */
.haveImg{
    height: 15rem;
    width: 95%;
    margin: 0.45rem auto;
    background-color: #fff;
    box-shadow: 1px 1px 1px 1px lemonchiffon;
    position: relative;
    z-index: auto;
}
.haveImage {
    width: 100%;
    height: 15rem;
}
.haveDesc {
    position: absolute;
    right: 1rem;
    bottom: 1rem;
    color: #fff;
}
.havePublishedAt {
    position: absolute;
    right: 1rem;
    bottom: 0rem;
    color: #fff;
}

/* 保存图片 */
.modalImg {
    width: 100%;
    height: 20rem;
}